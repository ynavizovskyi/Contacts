<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/nav_graph"
        app:startDestination="@id/FirstFragment">

    <fragment
            android:id="@+id/FirstFragment"
            android:name="com.ynavizovskyi.contacts.presentation.contactlist.ContactListFragment"
            android:label="@string/first_fragment_label"
            tools:layout="@layout/fragment_contact_list">

        <action
                android:id="@+id/action_listFragment_to_DetailsFragment"
                app:destination="@id/SecondFragment" />
    </fragment>

    <fragment
            android:id="@+id/SecondFragment"
            android:name="com.ynavizovskyi.contacts.presentation.ContactDetailsFragment"
            android:label="@string/second_fragment_label"
            tools:layout="@layout/fragment_contact_details">

        <argument
                android:name="contactId"
                app:argType="long" />

        <action
                android:id="@+id/action_SecondFragment_to_FirstFragment"
                app:destination="@id/FirstFragment" />

        <action
                android:id="@+id/action_SecondFragment_to_ThirdFragment"
                app:destination="@id/ThirdFragment" />
    </fragment>

    <fragment
            android:id="@+id/ThirdFragment"
            android:name="com.ynavizovskyi.contacts.presentation.EditContactFragment"
            android:label="@string/third_fragment_label"
            tools:layout="@layout/fragment_edit_contact">

        <argument
                android:name="contactId"
                app:argType="long" />

    </fragment>
</navigation>